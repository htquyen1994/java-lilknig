# Auto detect text files and perform LF normalization
* text=auto

# Java source files
*.java text eol=lf
*.xml text eol=lf
*.properties text eol=lf

# Markdown files
*.md text eol=lf

# JSON files
*.json text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.jar binary
*.war binary
*.class binary
*.dll binary
*.exe binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
